@{
	const double TPS_RATE = 0.05; 
	const double TVQ_RATE = 0.09975; 
	const double SHIPPING_COST = 15.0; 
}

@using Cosmechic.Models.ViewModels
@model ShoppingCartVM

@{
	ViewData["Title"] = "Vérification de la commande";
}

<section class="py-5" style="margin-top: 100px;">
	<div class="text-center">
		<h1 class="fw-folder" style="color:darkblue">
			@ViewData["Title"]
		</h1>
	</div>
</section>


<form method="post">
	<br />
	<div class="container">
		<div class="card shadow border-0">
			<div class="card-header bg-secondary bg-gradient text-light ml-0 py-4">
				<div class="row px-4">
					<div class="col-6">
						<h5 class="pt-2 text-white">
							Sommaire de la commande
						</h5>
					</div>
					<div class="col-6 text-end">
						<a asp-action="Index" class="btn btn-danger btn-sm">Retour au panier</a>
					</div>
				</div>
			</div>
			<div class="card-body">
				<div class="container rounded p-2">
					<div class="row">
						<div class="col-12 col-lg-6 pb-4">
							<div class="row">
								<h4 class="d-flex justify-content-between align-items-center mb-3">
									<span class="text-info">Informations de livraison:</span>
								</h4>
							</div>
							<div class="row my-1">
								<div class="col-3">
									<label>Nom</label>
								</div>
								<div class="col-9">
									<input asp-for="OrderHeader.Name" class="form-control"/>
									<span asp-validation-for="OrderHeader.Name" class="text-danger"></span>
								</div>
							</div>
							<div class="row my-1">
								<div class="col-3">
									<label>Téléphone</label>
								</div>
								<div class="col-9">
									<input asp-for="OrderHeader.PhoneNumber" class="form-control"/>
									<span asp-validation-for="OrderHeader.PhoneNumber" class="text-danger"></span>
								</div>
							</div>
							<div class="row my-1">
								<div class="col-3">
									<label>Addresse</label>
								</div>
								<div class="col-9">
									<input asp-for="OrderHeader.StreetAddress" class="form-control"/>
									<span asp-validation-for="OrderHeader.StreetAddress" class="text-danger"></span>
								</div>
							</div>
							<div class="row my-1">
								<div class="col-3">
									<label>Ville</label>
								</div>
								<div class="col-9">
									<input asp-for="OrderHeader.City" class="form-control"/>
									<span asp-validation-for="OrderHeader.City" class="text-danger"></span>
								</div>
							</div>
							<div class="row my-1">
								<div class="col-3">
									<label>Province</label>
								</div>
								<div class="col-9">
									<input asp-for="OrderHeader.State" class="form-control"/>
									<span asp-validation-for="OrderHeader.State" class="text-danger"></span>
								</div>
							</div>
							<div class="row my-1">
								<div class="col-3">
									<label>Code Postal</label>
								</div>
								<div class="col-9">
									<input asp-for="OrderHeader.PostalCode" class="form-control"/>
									<span asp-validation-for="OrderHeader.PostalCode" class="text-danger"></span>
								</div>
							</div>
						</div>
						<div class="col-12 col-lg-5 offset-lg-1">
							<h4 class="d-flex justify-content-between align-items-center mb-3">
								<span class="text-info">Sommaire de la commande:</span>
							</h4>
							<ul class="list-group mb-3">
								@foreach (var details in Model.ShoppingCartList)
								{
									<li class="list-group-item d-flex justify-content-between align-items-center">
										<div>
											<h6 class="my-0">@details.Product.Nom</h6>
											<small class="text-muted">Quantité: @details.Count</small>
										</div>
										<span class="text-muted">@(details.Price * details.Count) CAD</span>
									</li>
								}

								@{
									double subTotal = Model.ShoppingCartList.Sum(item => item.Price * item.Count);
									double totalTPS = subTotal * TPS_RATE;
									double totalTVQ = subTotal * TVQ_RATE;
									double totalShippingCost = SHIPPING_COST;
									double totalPrice = subTotal + totalTPS + totalTVQ + totalShippingCost;
								}
								<li class="list-group-item d-flex justify-content-between">
									<span class="text-muted">TPS:</span>
									<span class="text-muted">@totalTPS.ToString("0.00") CAD</span>
								</li>
								<li class="list-group-item d-flex justify-content-between">
									<span class="text-muted">TVQ:</span>
									<span class="text-muted">@totalTVQ.ToString("0.00") CAD</span>
								</li>
								<li class="list-group-item d-flex justify-content-between">
									<span class="text-muted">Frais de livraison:</span>
									<span class="text-muted">@totalShippingCost.ToString("0.00") CAD</span>
								</li>
								<li class="list-group-item d-flex justify-content-between bg-light">
									<small class="text-info">Total (CAD)</small>
									<strong class="text-info">@totalPrice.ToString("0.00") CAD</strong>
								</li>
							</ul>
						</div>

					<div class="card-footer">
						<div class="row">
							<div class="col-md-8">
								<p class="text-muted">
									Date de livraison approximative: @DateTime.Now.AddDays(7).ToShortDateString() - @DateTime.Now.AddDays(14).ToShortDateString()
								</p>
							</div>
							<div class="col-md-4">
								<button type="submit" value="Place Order" class="btn btn-primary btn-block">Passer au paiement</button>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</form>

<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Cosmechic</title>
    <link rel="icon" type="image" href="~/assets/favicon.ico" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css?family=Merriweather+Sans:400,700" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css?family=Merriweather:400,300,300italic,400italic,700,700italic" rel="stylesheet" type="text/css" />
    <link href="~/css/styles.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Cosmechic.styles.css" asp-append-version="true" />
    <style>
        header {
            position: fixed;
            top: 0;
            width: 100%;
            z-index: 1000;
            background-color: #ffffff;
            box-shadow: 0px 2px 5px rgba(0, 0, 0, 0.1);
        }
    </style>
</head>


<!-- Navigation-->
<body style="width: 100%; height: 100%;">
    <header>
        <div style="justify-content:flex-start;">
            <a class="nav-link active text-dark" asp-controller="Home" asp-action="Index" style="float:left; margin-top: -8px;">
                <img src="~/assets/img/Logo.png" alt="Cosmechic Logo">
            </a>
        </div>
        <nav style="background-color:#333333; height: 94px; width: 100%;">
            <form style="height: 32px; position: relative; padding-left: 625px; padding-top: 25px; width: 80%;" action="/Produits/Rechercher" method="get">
                <div class="input-group">
                    <input class="form-control" name="query" type="search" placeholder="Rechercher les produits" aria-label="Rechercher les produits">
                    <button class="btn btn-primary" style="background: darkblue; border: none; padding-bottom: 10px;">Rechercher</button>
                </div>
            </form>
        </nav>

        <nav class="navbar navbar-expand-lg" style="color:darkblue; padding-bottom:27px; background-color:darkorange; height:10px; width: auto; margin-right: -30px;">
            <div class="container d-flex justify-content-between" id="navbarSupportedContent" style="padding-top: 15px; font-weight: bold">
                <ul class="navbar-nav flex-row">
                    <li class="nav-item me-2 me-lg-0 d-none d-md-inline-block">
                        <a class="nav-link active text-dark" asp-controller="Home" asp-action="Index">Accueil</a>
                    </li>
                    <li class="nav-item me-2 me-lg-0 d-none d-md-inline-block">
                        <a class="nav-link text-dark" asp-controller="Home" asp-action="About">À propos</a>
                    </li>

                    @if (User.IsInRole("Admin"))
                    {
                        <li class="nav-item me-2 me-lg-0 d-none d-md-inline-block">
                            <a class="nav-link text-dark" asp-controller="Home" asp-action="Contact">Nous joindre</a>
                        </li>
                        <li class="nav-item me-2 me-lg-0 d-none d-md-inline-block">
                            <a class="nav-link text-dark" asp-controller="AspNetUsers" asp-action="Dashboard">Tableau de bord</a>
                        </li>
                    }
                    else
                    {
                        <li class="nav-item me-2 me-lg-0 d-none d-md-inline-block">
                            <a class="nav-link active text-dark" asp-controller="Categories" asp-action="Customer">Categories</a>
                        </li>

                        <li class="nav-item me-2 me-lg-0 d-none d-md-inline-block">
                            <a class="nav-link text-dark" asp-controller="Home" asp-action="Contact">Nous joindre</a>
                        </li>
                    }
                </ul>
                <ul class="navbar-nav flex-row">
                    <li class="nav-item me-2 me-lg-0 d-none d-md-inline-block">
                        <partial name="_LoginPartial" />
                    </li>
                    <li class="nav-item me-2 me-lg-0 d-none d-md-inline-block" style="font-size: 20px;">
                        <a class="nav-link text-dark" asp-controller="Cart" asp-action="Index">
                            @await Component.InvokeAsync("ShoppingCart")
                        </a>
                    </li>
                </ul>
            </div>
        </nav>
    </header>



    <!-- Masthead-->
    <main role="main" class="pb-3" style="position:relative; min-height: 100%; padding-bottom:100px;">
        <div>
            @RenderBody()
        </div>
    </main>

    <!-- Footer -->
    <footer class="container-fluid bg-dark text-white py-4">
        <div class="row border-top border-light mx-xl-5 py-4">
            <div class="d-flex justify-content-center">
                <ul class="nav">
                    <li class="nav-item">
                        <a class="text-info" asp-controller="Home" asp-action="About">Qui sommes-nous?</a> |
                    </li>
                    <li class="nav-item">
                        <a class="text-info" asp-controller="Home" asp-action="Privacy">Politique de confidentialité</a> |
                    </li>
                    <li class="nav-item">
                        <a class="text-info" asp-controller="Home" asp-action="Terms">Termes et conditions</a>
                    </li>
                </ul>
            </div>
            <div class="col-md-6 px-xl-0 text-center text-md-right">
                <div class="text-center mt-3">
                    <img class="img-fluid" src="~/assets/img/payments.png" alt="Moyens de paiement">
                </div>
            </div>
            <div class="col-md-6 px-xl-0 text-center text-md-left">
                <div class="text-cenetr mt-3">
                    <p>&copy; Année 2023 - 2024 Cosmechic. Tous droits réservés.</p>
                </div>
            </div>
        </div>
    </footer>

    <!-- Bootstrap core JavaScript -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>

    <!-- JQuery -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

    <!-- JQuery Validation -->
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>

    <!-- Custom Scripts -->
    <script src="~/js/scripts.js"></script>
    <script src="https://cdn.startbootstrap.com/sb-forms-latest.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    <!-- Bootstrap core JavaScript-->
    <script src="vendor/jquery/jquery.min.js"></script>
    <script src="vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

    <!-- Core plugin JavaScript-->
    <script src="vendor/jquery-easing/jquery.easing.min.js"></script>

    <!-- Custom scripts for all pages-->
    <script src="js/sb-admin-2.min.js"></script>

    <!-- Page level plugins -->
    <script src="vendor/chart.js/Chart.min.js"></script>

    <!-- Page level custom scripts -->
    <script src="js/demo/chart-area-demo.js"></script>
    <script src="js/demo/chart-pie-demo.js"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

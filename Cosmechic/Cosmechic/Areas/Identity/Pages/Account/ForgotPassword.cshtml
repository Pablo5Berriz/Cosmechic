@page
@model ForgotPasswordModel
@{
    ViewData["Title"] = "Mot de passe oublié?";
}

<section class="py-5" style="margin-top: 100px;">
    <div class="text-center">
        <h1 class="fw-folder" style=" color:darkblue">
            @ViewData["Title"]
        </h1>
    </div>
</section>

<div class="container">
    <div class="text-center mb-5">
        <h2>Saisissez votre courriel.</h2>
        <hr />
    </div>

    <div class="row justify-content-center">
        <div class="col-md-5">
            <img src="~/Images log_register_forgot/MDP_Oublie.png" class="img-fluid" alt="Sample image">

            <form method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                <div class="form-floating mb-3">
                    <input asp-for="Input.Email" class="form-control" autocomplete="email" aria-required="true" placeholder="name@example.com" />
                    <label asp-for="Input.Email" class="form-label"></label>
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <button type="submit" class="w-100 btn btn-lg btn-primary">Réinitialiser le mot de passe</button>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

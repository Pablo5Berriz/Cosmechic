@page
@model LoginModel

@{
    ViewData["Title"] = "Connectez-vous";
}

<section class="py-5" style="margin-top: 100px;">
    <div class="text-center">
        <h1 style=" color:darkblue">
            @ViewData["Title"]
        </h1>
    </div>
</section>



<section class="py-5">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-5">
                <img src="~/Images log_register_forgot/Connexion.png" class="img-fluid" alt="Sample image">
            </div>
            <div class="col-md-5">
                <section>
                    <form id="account" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                        <div class="form-floating mb-3">
                            <input asp-for="Input.Username" class="form-control" autocomplete="username" aria-required="true" />
                            <label asp-for="Input.Username" class="form-label">Nom d'utilisateur</label>
                            <span asp-validation-for="Input.Username" class="text-danger"></span>
                        </div>

                        <div class="form-floating mb-3">
                            <input type="password" asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" />
                            <label asp-for="Input.Password" class="form-label">Mot de passe</label>
                            <span asp-validation-for="Input.Password" class="text-danger"></span>
                        </div>

                        <div class="checkbox mb-3">
                            <label asp-for="Input.RememberMe" class="form-label">
                                <input type="checkbox" class="form-check-input" asp-for="Input.RememberMe" />
                                @Html.DisplayNameFor(m => m.Input.RememberMe)
                            </label>
                        </div>

                        <div>
                            <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-success">Se connecter</button>
                        </div>

                        <div>
                            <p><a id="forgot-password" asp-page="./ForgotPassword">Mot de passe oublié?</a></p>
                            <p><a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">S'enregistrer comme un nouveau utilisateur</a></p>
                            <p><a id="resend-confirmation" asp-page="./ResendEmailConfirmation">Renvoyer mail de confirmation</a></p>
                        </div>
                    </form>
                </section>
            </div>
        </div>
    </div>
</section>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

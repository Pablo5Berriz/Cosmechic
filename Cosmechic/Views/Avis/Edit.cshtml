@model Cosmechic.Models.Avi

@{
    ViewData["Title"] = "Créer un avis";
    if (User.IsInRole("Admin"))
    {
        Layout = "~/Views/Shared/_DashboardLayout.cshtml";
    }
}

<section class="py-5" style="margin-top: 100px;">
    <div class="text-center">
        <h1 class="fw-folder" style=" color:darkblue">
            @ViewData["Title"]
        </h1>
    </div>
</section>
<div class="container mt-5 mb-5" style="margin-top: 100px;">
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="ReviewId" />
                <div class="form-group">
                    <label asp-for="AspNetUserId" class="control-label"></label>
                    <select asp-for="AspNetUserId" class="form-control" asp-items="ViewBag.AspNetUserId"></select>
                    <span asp-validation-for="AspNetUserId" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ProduitId" class="control-label"></label>
                    <select asp-for="ProduitId" class="form-control" asp-items="ViewBag.ProduitId"></select>
                    <span asp-validation-for="ProduitId" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="PaiementId" class="control-label"></label>
                    <select asp-for="PaiementId" class="form-control" asp-items="ViewBag.PaiementId"></select>
                    <span asp-validation-for="PaiementId" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Note" class="control-label"></label>
                    <input asp-for="Note" class="form-control" />
                    <span asp-validation-for="Note" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Commentaire" class="control-label"></label>
                    <input asp-for="Commentaire" class="form-control" />
                    <span asp-validation-for="Commentaire" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="DateReview" class="control-label"></label>
                    <input asp-for="DateReview" class="form-control" />
                    <span asp-validation-for="DateReview" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>

    <div>
        <a asp-action="Index">Back to List</a>
    </div>
</div>

